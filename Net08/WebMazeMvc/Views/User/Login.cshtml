@model RegistrationViewModel
<h1>Login</h1>
<form action="/User/Login" method="post">
    <div>
        @Html.TextBoxFor(x => x.Login)
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div>
        @Html.TextBoxFor(x => x.Password)
    </div>
    <div>
        <input type="submit" value="Login" />
    </div>
</form>