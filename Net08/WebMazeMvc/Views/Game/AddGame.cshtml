@model GameViewModel

<form action="/Game/AddGame" method="post">
    <div>
        NameGame: <input name="Namegame" />
    </div>
    <div>
        Url: <input name="Url" />
    </div>
    <div>
        Link: <input name="Link" />
    </div>
    <div class=" cover-select-genre">
        @for (int i = 0; i < Model.Genre.Capacity; i++)
        {
        <div class="name-genre">
            @Html.HiddenFor(m => Model.Genre[i].Id)
            @Html.HiddenFor(m => Model.Genre[i].GenreName)
            @Html.DisplayFor(x => Model.Genre[i].GenreName)
        </div>
            <div class=" select-genre">
                @Html.CheckBoxFor(x => Model.Genre[i].IsSelected)
            </div>
        }
    </div>
    <div>
        <input type="submit" value="Send" />
    </div>
</form>

